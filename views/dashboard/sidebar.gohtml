{{define "dashboard/sidebar"}}
<aside id="sidebar-dashboard">
  <div class="slimscroll">
    <div class="well well-sm user-info">
      <h5>User Profile</h5>
      <i class="glyphicon glyphicon-user"></i>
      <div class="btn-group">
        <button type="button" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-cog"></i>
        </button>
        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">settings <span class="caret"></span>
        </button>
        <ul class="dropdown-menu right" role="menu" style="margin-left: -24px;">
          <li><a href="/admin/users/{{.ActiveUser.ID}}/edit"><i class="glyphicon glyphicon-edit indent"></i>Edit profile</a>
          </li>
          <li class="divider"></li>
          <li><a href="/logout"><i class="glyphicon glyphicon-off indent"></i>Logout</a>
          </li>
        </ul>
      </div>
      <span class="email">{{.ActiveUser.Email}}</span>
    </div>

    <h5>Navigation</h5>
    <ul class="nav flex-column nav-pills">
      <li class="nav-item">
        <a class="nav-link {{isActive .Active "posts"}}" href="/admin/posts"><i class="glyphicon glyphicon-pencil indent"></i>Posts</a>
      </li>
      <li class="nav-item">
        <a class="nav-link {{isActive .Active "tags"}}" href="/admin/tags"><i class="glyphicon glyphicon-pencil indent"></i>Tags</a>
      </li>
      <li class="nav-item">
        <a class="nav-link {{isActive .Active "pages"}}" href="/admin/pages"><i class="glyphicon glyphicon-duplicate indent"></i>Pages</a>
      </li>
      <li class="nav-item">
        <a class="nav-link {{isActive .Active "users"}}" href="/admin/users"><i class="glyphicon glyphicon-user indent"></i>Users</a>
      </li>
    </ul>
  </div>
</aside>
{{end}}
